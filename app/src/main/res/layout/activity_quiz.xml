<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".QuizActivity">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:translationY="10dp"
        android:translationX="310dp"
        android:src="@drawable/timer_icon"
        />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:translationY="-10dp"
            android:translationX="350dp"
            android:text="00:59"/>

    <TextView
        android:id="@+id/questions"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_back_white"
        android:elevation="1dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="1/10"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/round_back_light_yellow10"
        android:gravity="center"
        android:text="Cards will come here..."
        android:minHeight="100dp"
        android:padding="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opçao1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Opçao 1"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/round_back_white_stroke2_10"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opçao2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Opçao 2"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/round_back_white_stroke2_10"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opçao3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Opçao 3"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/round_back_white_stroke2_10"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opçao4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Opçao 4"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/round_back_white_stroke2_10"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text="Proxima Pergunta"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/round_back_green20"
        />


</LinearLayout>